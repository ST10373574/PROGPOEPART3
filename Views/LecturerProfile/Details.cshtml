@model Prog2bPOEPart2.Models.LecturerProfileViewModel

@{
    ViewData["Title"] = "Lecturer Details";
}

<div class="container my-5">
    <h1 class="text-center text-primary mb-4">Lecturer Details</h1>

    <div class="card shadow-sm border-light">
        <div class="card-body">
            <h5 class="card-title text-dark">Profile Information</h5>
            <div class="row">
                <div class="col-md-6">
                    <p><strong>UserID:</strong> @Model.UserID</p>
                    <p><strong>Name:</strong> @Model.Name</p>
                    <p><strong>Role:</strong> @Model.Role</p>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-center">
                <a href="@Url.Action("Edit", "LecturerProfile", new { id = Model.UserID })" class="btn btn-primary btn-lg mr-3" style="border-radius: 20px;">Edit Profile</a>
                <a href="@Url.Action("Index", "LecturerProfile")" class="btn btn-secondary btn-lg" style="border-radius: 20px;">Back to List</a>
            </div>
        </div>
    </div>
</div>
