@model Prog2bPOEPart2.Models.Document

@{
    ViewData["Title"] = "Create Document";
}

<div class="container my-5">
    <h2 class="text-center text-primary mb-4">Create Document</h2>
    <p class="text-center mb-4" style="color: #555;">Please make sure that the document is either a PDF or a DOCX file.</p>

    <div class="card shadow-sm border-light" style="border-radius: 0;">
        <div class="card-body">
            <form asp-action="Create" enctype="multipart/form-data">

                <div class="form-group">
                    <label asp-for="ClaimId" class="control-label">Claim</label>
                    <select asp-for="ClaimId" class="form-control" asp-items="ViewBag.ClaimId"></select>
                </div>

                <div class="form-group mt-3">
                    <label for="file">Upload Document</label>
                    <input type="file" class="form-control" name="file" />
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary btn-lg" style="border-radius: 20px;">Create</button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg" style="border-radius: 20px;">Back to List</a>
                </div>

            </form>
        </div>
    </div>
</div>
