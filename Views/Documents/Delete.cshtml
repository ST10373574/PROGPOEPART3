@model Prog2bPOEPart2.Models.Document

@{
    ViewData["Title"] = "Delete Document";
}

<div class="container my-5">
    <h2 class="text-center text-danger mb-4">Delete Document</h2>
    <p class="text-center mb-4" style="color: #555;">Are you sure you want to delete this document? This action cannot be undone.</p>

    <div class="card shadow-sm border-light" style="border-radius: 0;">
        <div class="card-body">
            <h4 class="mb-4">Document Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.FileName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FileName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.FileType)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FileType)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.FilePath)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FilePath)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.FileSize)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FileSize)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.UploadedDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.UploadedDate)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Claim)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Claim.ClaimId)
                </dd>
            </dl>

            <div class="mt-4 text-center">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="DocumentId" />
                    <button type="submit" class="btn btn-danger btn-lg" style="border-radius: 20px;">Delete</button>
                </form>

                <a asp-action="Index" class="btn btn-secondary btn-lg mt-2" style="border-radius: 20px;">Back to List</a>
            </div>
        </div>
    </div>
</div>
