@{
    ViewData["Title"] = "Home Page";
}

<div class="container my-5">

    <!-- Banner Section -->
    <div class="banner-container position-relative text-white mb-5" 
         style="background-image: url('https://www.cms.gov/sites/default/files/2024-07/cms_2024_adminsimp_opprules_eligibility_claim_status_banner_2400px.png');
                background-size: cover; 
                background-position: center; 
                height: 350px; 
                border-radius: 15px;">
        <div class="banner-content position-absolute top-50 start-50 translate-middle text-center" style="background-color: rgba(0, 0, 0, 0.5); padding: 20px; border-radius: 10px;">
            <h1 class="display-4 fw-bold" style="font-family: 'Poppins', sans-serif;">Empowering Lecturers</h1>
            <p class="lead" style="font-family: 'Poppins', sans-serif;">Simplify claims submission and management with our modern platform.</p>
        </div>
    </div>

    <!-- Call to Action Cards -->
    <div class="row justify-content-center mb-5">
        <div class="col-md-4 mb-4">
            <div class="card shadow text-center" style="border-radius: 15px;">
                <div class="card-body p-4">
                    <h5 class="card-title" style="font-family: 'Poppins', sans-serif;">Upload Documents</h5>
                    <p class="card-text" style="color: #6c757d;">Easily upload supporting documents for your claims.</p>
                    <a class="btn btn-lg mb-2" href="@Url.Action("Create", "Documents")" 
                       style="background-color: #4CAF50; color: white; border-radius: 25px;">Upload Documents</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow text-center" style="border-radius: 15px;">
                <div class="card-body p-4">
                    <h5 class="card-title" style="font-family: 'Poppins', sans-serif;">Submit a Claim</h5>
                    <p class="card-text" style="color: #6c757d;">Quickly submit your claims with ease.</p>
                    <a class="btn btn-lg mb-2" href="@Url.Action("Create", "Claims")" 
                       style="background-color: #FF5722; color: white; border-radius: 25px;">Submit a Claim</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow text-center" style="border-radius: 15px;">
                <div class="card-body p-4">
                    <h5 class="card-title" style="font-family: 'Poppins', sans-serif;">Track Claims</h5>
                    <p class="card-text" style="color: #6c757d;">Stay updated on your claim status effortlessly.</p>
                    <a class="btn btn-lg mb-2" href="@Url.Action("Index", "Claims")" 
                       style="background-color: #607D8B; color: white; border-radius: 25px;">Track Claims</a>
                </div>
            </div>
        </div>
    </div>

    <!-- About Us Section -->
    <div class="row justify-content-center mb-5">
        <div class="col-md-10">
            <div class="card shadow-lg" style="border-radius: 15px;">
                <div class="card-body p-5">
                    <h3 class="text-center mb-4" style="font-family: 'Poppins', sans-serif; color: #333;">About Us</h3>
                    <p class="text-center" style="color: #555;">We simplify claim submission and management for lecturers, ensuring fast and efficient processing. Our user-centric platform is built with years of expertise to support your unique needs.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Us Section -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg" style="border-radius: 15px;">
                <div class="card-body p-5">
                    <h3 class="text-center mb-4" style="font-family: 'Poppins', sans-serif; color: #333;">Contact Us</h3>
                    <p class="text-center mb-4" style="color: #555;">Need assistance? Fill out the form below, and we’ll be in touch shortly.</p>

                    <form>
                        <div class="mb-4">
                            <label for="contactName" class="form-label" style="font-family: 'Poppins', sans-serif;">Your Name:</label>
                            <input type="text" class="form-control" id="contactName" name="ContactName" placeholder="Enter your name" style="border-radius: 10px;">
                        </div>
                        <div class="mb-4">
                            <label for="contactNumber" class="form-label" style="font-family: 'Poppins', sans-serif;">Your Contact Number:</label>
                            <input type="tel" class="form-control" id="contactNumber" name="ContactNumber" placeholder="Enter your contact number" style="border-radius: 10px;">
                        </div>

                        <!-- Submit button -->
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-lg" style="background-color: #4CAF50; color: white; border-radius: 25px;">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Include Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<!-- Include Bootstrap JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
