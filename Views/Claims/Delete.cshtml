@model Prog2bPOEPart2.Models.Claim

@{
    ViewData["Title"] = "Delete";
}

<div class="container my-5">

    <!-- Banner Section -->
    <div class="banner-container position-relative text-white mb-5"
         style="background-image: url('https://images.squarespace-cdn.com/content/v1/5b0781cd697a981c5084b045/a671a613-8f6c-44d0-9e37-19e444bbf451/colynary-media-ZKkuYgbTRl8-unsplash-min.jpg');
                background-size: cover;
                background-position: center;
                height: 350px;
                border-radius: 15px;">
        <div class="banner-content position-absolute top-50 start-50 translate-middle text-center" style="background-color: rgba(0, 0, 0, 0.5); padding: 20px; border-radius: 10px;">
            <h1 class="display-4 fw-bold" style="font-family: 'Poppins', sans-serif;">Delete Claim</h1>
        </div>
    </div>

    <!-- Delete Confirmation Section -->
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="card shadow-lg" style="border-radius: 15px;">
                <div class="card-body p-5">
                    <h3 class="text-center mb-4" style="font-family: 'Poppins', sans-serif; color: #333;">Are you sure you want to delete this claim?</h3>
                    <hr />

                    <!-- Claim Information -->
                    <dl class="row">
                        <dt class="col-sm-2" style="font-family: 'Poppins', sans-serif; color: #333;">
                            @Html.DisplayNameFor(model => model.UserID)
                        </dt>
                        <dd class="col-sm-10" style="color: #555;">
                            @Html.DisplayFor(model => model.UserID)
                        </dd>
                        <dt class="col-sm-2" style="font-family: 'Poppins', sans-serif; color: #333;">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-10" style="color: #555;">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-2" style="font-family: 'Poppins', sans-serif; color: #333;">
                            @Html.DisplayNameFor(model => model.DateSubmitted)
                        </dt>
                        <dd class="col-sm-10" style="color: #555;">
                            @Html.DisplayFor(model => model.DateSubmitted)
                        </dd>
                        <dt class="col-sm-2" style="font-family: 'Poppins', sans-serif; color: #333;">
                            @Html.DisplayNameFor(model => model.HoursWorked)
                        </dt>
                        <dd class="col-sm-10" style="color: #555;">
                            @Html.DisplayFor(model => model.HoursWorked)
                        </dd>
                        <dt class="col-sm-2" style="font-family: 'Poppins', sans-serif; color: #333;">
                            @Html.DisplayNameFor(model => model.HourlyRate)
                        </dt>
                        <dd class="col-sm-10" style="color: #555;">
                            @Html.DisplayFor(model => model.HourlyRate)
                        </dd>
                        <dt class="col-sm-2" style="font-family: 'Poppins', sans-serif; color: #333;">
                            @Html.DisplayNameFor(model => model.ExtraNotes)
                        </dt>
                        <dd class="col-sm-10" style="color: #555;">
                            @Html.DisplayFor(model => model.ExtraNotes)
                        </dd>
                        <dt class="col-sm-2" style="font-family: 'Poppins', sans-serif; color: #333;">
                            @Html.DisplayNameFor(model => model.Status)
                        </dt>
                        <dd class="col-sm-10" style="color: #555;">
                            @Html.DisplayFor(model => model.Status)
                        </dd>
                    </dl>

                    <!-- Confirmation Form -->
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ClaimId" />
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-lg" style="background-color: #FF5722; color: white; border-radius: 25px;">Delete</button>
                        </div>
                    </form>

                    <!-- Back to List Button -->
                    <div class="text-center mt-3">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg" style="border-radius: 25px;">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Include Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<!-- Include Bootstrap JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
