@model Prog2bPOEPart2.Models.Claim

@{
    ViewData["Title"] = "Claim Details"; // Setting the page title for display in the layout.
}

<!-- Main container with spacing -->
<div class="container my-5">

    <!-- Banner Section -->
    <div class="banner-container position-relative text-white mb-5"
         style="background-image: url('https://images.squarespace-cdn.com/content/v1/5b0781cd697a981c5084b045/a671a613-8f6c-44d0-9e37-19e444bbf451/colynary-media-ZKkuYgbTRl8-unsplash-min.jpg');
                background-size: cover; /* Ensures the image covers the entire section */
                background-position: center; /* Centers the image */
                height: 350px;
                border-radius: 15px;">
        <!-- Rounded corners -->
        <!-- Overlay for text on the banner -->
        <div class="banner-content position-absolute top-50 start-50 translate-middle text-center"
             style="background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent dark background */
                    padding: 20px;
                    border-radius: 10px;">
            <h1 class="display-4 fw-bold" style="font-family: 'Poppins', sans-serif;">Claim Details</h1>
        </div>
    </div>

    <!-- Claim Details Section -->
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <!-- Card for Claim Details -->
            <div class="card shadow-lg border-0" style="border-radius: 15px;">
                <div class="card-body p-4">
                    <!-- Header for Claim Details -->
                    <h3 class="text-center mb-4" style="font-family: 'Poppins', sans-serif; color: #333;">Claim Information</h3>
                    <hr />

                    <!-- Claim Details List -->
                    <dl class="row">
                        <dt class="col-sm-4" style="font-family: 'Poppins', sans-serif; color: #333; font-weight: 500;">
                            @Html.DisplayNameFor(model => model.UserID) <!-- Field name -->
                        </dt>
                        <dd class="col-sm-8" style="color: #555;">
                            @Html.DisplayFor(model => model.UserID) <!-- Field value -->
                        </dd>
                        <dt class="col-sm-4" style="font-family: 'Poppins', sans-serif; color: #333; font-weight: 500;">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-8" style="color: #555;">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-4" style="font-family: 'Poppins', sans-serif; color: #333; font-weight: 500;">
                            @Html.DisplayNameFor(model => model.DateSubmitted)
                        </dt>
                        <dd class="col-sm-8" style="color: #555;">
                            @Html.DisplayFor(model => model.DateSubmitted)
                        </dd>
                        <dt class="col-sm-4" style="font-family: 'Poppins', sans-serif; color: #333; font-weight: 500;">
                            @Html.DisplayNameFor(model => model.HoursWorked)
                        </dt>
                        <dd class="col-sm-8" style="color: #555;">
                            @Html.DisplayFor(model => model.HoursWorked)
                        </dd>
                        <dt class="col-sm-4" style="font-family: 'Poppins', sans-serif; color: #333; font-weight: 500;">
                            @Html.DisplayNameFor(model => model.HourlyRate)
                        </dt>
                        <dd class="col-sm-8" style="color: #555;">
                            @Html.DisplayFor(model => model.HourlyRate)
                        </dd>
                        <dt class="col-sm-4" style="font-family: 'Poppins', sans-serif; color: #333; font-weight: 500;">
                            @Html.DisplayNameFor(model => model.ExtraNotes)
                        </dt>
                        <dd class="col-sm-8" style="color: #555;">
                            @Html.DisplayFor(model => model.ExtraNotes)
                        </dd>
                        <dt class="col-sm-4" style="font-family: 'Poppins', sans-serif; color: #333; font-weight: 500;">
                            @Html.DisplayNameFor(model => model.Status)
                        </dt>
                        <dd class="col-sm-8" style="color: #555;">
                            @Html.DisplayFor(model => model.Status)
                        </dd>
                    </dl>

                    <!-- Action Buttons Section -->
                    <div class="text-center mt-4">
                        <!-- Edit Button -->
                        <a class="btn btn-primary btn-lg px-4 py-2" asp-action="Edit" asp-route-id="@Model?.ClaimId"
                           style="border-radius: 25px; font-family: 'Poppins', sans-serif;">
                            Edit
                        </a> |
                        <!-- Back to List Button -->
                        <a class="btn btn-secondary btn-lg px-4 py-2" asp-action="Index"
                           style="border-radius: 25px; font-family: 'Poppins', sans-serif;">
                            Back to List
                        </a> |
                        <!-- Delete Button with Confirmation -->
                        <form method="post" asp-action="Delete" asp-route-id="@Model?.ClaimId" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-lg px-4 py-2"
                                    onclick="return confirm('Are you sure you want to delete this claim?')"
                                    style="border-radius: 25px; font-family: 'Poppins', sans-serif;">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Include Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<!-- Include Bootstrap JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
